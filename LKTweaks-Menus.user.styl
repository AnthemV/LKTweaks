  right: 6px;
  left: 6px;
  border-radius: var(--border-radius);
}

.world-select-logo-container + div > div:first-of-type .tree-item-inner {
    z-index: 0;
}




/* Projects */
.drop-box [class="menu-item interactive-overlay"] {
    width: calc(100% - 40px);
    margin-left: 20px;
    border-radius: 8px;
    min-width: 190px;
}

/* Project inner padding */
.menu-item {
    padding: 12px 16px;
}

/* Project menu dividers */
.divider.secondary {
    margin: 0px 30px !important;
}
.world-select-background [class="divider padded"] {
    margin-bottom: 8px
}



}

