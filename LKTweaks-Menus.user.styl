@-moz-document domain("app.legendkeeper.com") {
/* Misc */

/* Fix for main wiki entries */
div.special-overlay:nth-child(n) {
    width: 99% !important;
}

:root {
    --border-radius: 4px;
}

/* Add padding to dividers in menus and boards */
.divider.padded, .c-hbofmm {
    margin-top: 6px;
    margin-bottom: 6px;
}

/* Makes the 'Add Block' menu nicer */ /*
.MuiList-root.MuiMenu-list.lk-context-menu.MuiList-padding:has(.text-input):not(:has(context-menu-resource-selector)) {
padding-top: 0px !important;
padding-bottom: 0px !important;
overflow: hidden;
}
}

@-moz-document domain("app.legendkeeper.com") {
/* Project Landing Page */

/* Sidebar */
.world-select-logo-container + div > div:first-of-type .interactive-overlay:hover, .world-select-logo-container + div > div:first-of-type .interactive-overlay:active {
  background-color: transparent;
}

.theme-dark .world-select-logo-container + div > div:first-of-type .interactive-overlay:hover::before, .theme-dark .world-select-logo-container + div > div:first-of-type .interactive-overlay:active::before {
  background-color: #464a4d;
    content: "";
