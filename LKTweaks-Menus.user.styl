  top: .5px;
  bottom: .5px;
  right: 6px;
  left: 6px;
  border-radius: var(--border-radius);
}

.theme-light .world-select-logo-container + div > div:first-of-type .interactive-overlay:hover::before, .teme.light .world-select-logo-container + div > div:first-of-type .interactive-overlay:active::before {
