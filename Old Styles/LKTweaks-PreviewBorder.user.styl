@-moz-document url-prefix("http://example.com") {
/* ==UserStyle==
@name           LKTweaks - Link Preview Borders
@namespace      app.legendkeeper.com
@description    Adds a small border to the edges of link preview windows
@author         AnthemV
@version        1.3
@license        Attribution 4.0 International (CC BY 4.0)
@homepageURL    https://github.com/AnthemV/LKTweaks
@supportURL     https://github.com/AnthemV/LKTweaks/issues
@updateURL      https://github.com/AnthemV/LKTweaks/raw/main/LKTweaks-PreviewBorder.user.styl
==/UserStyle== */
}

@-moz-document domain("app.legendkeeper.com") {
/* Add top parts of border title bar */
[class="popover-resource elevated"] .bar-title {
    border-top: 1px;
    border-left: 1px;
    border-right: 1px;
    border-color: #323436;
    border-style: solid;
    border-radius: 8px 8px 0px 0px;
}

/* Add bottom parts of border to popup editor */
[class="popover-resource elevated"] div.resource-editor:nth-child(1) > div:nth-child(1) {
    border-bottom: 1px;
    border-radius: 0px 0px 8px 8px;
    border-left: 1px;
    border-right: 1px;
    border-style: solid;
    border-color: #323436;
}

/* Add bottom parts of border to boards preview */
[class="popover-resource elevated"] .tl-absolute {
    border-bottom: 1px;
    border-radius: 0px 0px 8px 8px;
    border-left: 1px;
    border-right: 1px;
    border-style: solid;
    border-color: #323436;
}

/* Add slight margins to divider to prevent overlap */
.popover-resource > div:nth-child(2) {
    margin-left: 1px;
    margin-right: 1px;
}
}
