@-moz-document domain("app.legendkeeper.com") {
/* Embed Fixes - LK side */
/* Rounds the corners of the Youtube embed to match Spotify */
div.px-4 > iframe:nth-child(1) {
    border-radius: .75rem;
}

/* Adds padding to the Youtube and Spotify embeds */
div.px-4 {
    padding-top: 4px;
    padding-bottom: 4px;
}

/* Height of the Youtube embed. Set to 80px to match Spotify. Set to 153px to remove small borders from to0p and bottom of player. Default is 157px. WARNING: Setting lower than 157px will make video thumbnails blurry */
[title="YouTube Video Player"] {
    height: 157px;
    width: 276px;
}

/* Removes the white focus indicator on the video player that never seems to go away once it shows up */
:-moz-focusring {
    outline: none !important;
}
}

@-moz-document url-prefix("https://www.youtube.com/embed") {
/* Embed Tweaks - Youtube Side */
/* Matches LK's font */
.html5-video-player {
    font-family: Inter, "YouTube Noto", Roboto, Arial, Helvetica, sans-serif;
}

/* Move play button around to avoid overlap */
.ytp-large-play-button {
    scale: .7;
    margin-bottom: 0px;
    position: absolute;
}

/* Shrink top player UI */
.ytp-chrome-top {
    margin-top: -9px;
    width: 376.7px;
    left: -46px;
    scale: 0.7 !important;
}

.ytp-title-link {
    margin-top: -1px;
    font-weight: 500;
    margin-left: 4px;
}

.ytp-title-channel-logo {
    scale: .84;
}

/* Shrink bottom player UI */
.ytp-chrome-controls {
    margin-left: -59px;
    margin-bottom: 0px;
    margin-top: 5px;
    scale: 0.7;
    width: 411px;
}

/* Shrink channel logo */
.ytp-title-channel-logo {
    scale: .84;
}

/* Section title size */
.ytp-chapter-title-content {
    font-size: 16px;
    font-weight: 500 !important;
    margin-left: 4px;
    margin-bottom: -1px;
    max-width: 236px;
    text-overflow: ellipsis;
}

.ytp-chapter-title-prefix {
    margin-bottom: -3px;
}

/* Icon buttons */
.ytp-play-button {
    margin-left: -9px !important;
}

.ytp-youtube-button {
    position: absolute !important;
    margin-left: -87px !important;
}

/* Progress Bar */
.ytp-embed .ytp-progress-bar-container {
    bottom: 0px !important;
}

.ytp-progress-bar-container:hover .ytp-timed-markers-container {
    scale: inherit;
}

/* Scale down and reposition the preview when scrubbing through video */
.ytp-tooltip {
    top: 24px !important;
    scale: 0.6 !important;
}

/* Remove the "pull of to seek" text */
.ytp-tooltip-edu {
    display: none !important;
}

/* Increase font size of section title tooltip */
.ytp-tooltip-title {
    font-size: 17px !important;
}

/* Slightly increase vertical spacing of timestamp tooltip */
.ytp-tooltip-text {
    top: 49px !important;
}

/* Use the video as a cover/background, instead of being weirdly shrunken down when matching the height of Spotify */
.video-stream {
    width: 100% !important;
    left: 0px !important;
}

/* Slightly oversize the video to cover borders that can't be hidden (blame YouTube) */
.video-stream {
    height: 157px !important;
    top: 0px !important;
}

/* Slightly oversize the thumbnail to cover borders that can't be hidden (a necessary evil) */
.ytp-cued-thumbnail-overlay-image {
  width: 101% !important;
  height: 105% !important;
  top: -4px !important;
}

/* Hide the brand watermark */
.branding-img,
.branding-img-container {
    visibility: hidden;
    display: none;
}

/* Decrease size of options in the menu */
.ytp-overflow-panel-action-buttons {
    scale: .58;
}

.ytp-overflow-panel-close {
    scale: .8;
}

/* Hide endscreen content */
.ytp-title-enable-channel-logo:not(.ytp-mweb-player) .html5-endscreen:not(.ytp-shorts-branded-ui) {
    display: none;
}

/* Shrink the share panel size */
.ytp-share-panel-inner-content {
    scale: 0.7;
}

.ytp-share-panel-link {
    margin-top: 22px;
}

/* Hide share text */
.ytp-share-panel-title {
    display: none;
}

/* Shrinks the right cick menu */
div.ytp-popup:nth-child(5) > div:nth-child(1) > div:nth-child(1) {
scale: 0.9;
}

/* Remove the hint of color around the rounded corners of the player */
.html5-video-player:not(.ytp-transparent), .html5-video-player.unstarted-mode, .html5-video-player.ad-showing, .html5-video-player.ended-mode, .html5-video-player.ytp-fullscreen {
  background-color: transparent !important;
}


}
